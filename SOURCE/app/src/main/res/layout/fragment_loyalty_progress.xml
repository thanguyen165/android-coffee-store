<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_rounded"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ui.loyaltycard.LoyaltyProgressFragment">

    <!-- Title and Counter -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Loyalty card"
            android:textColor="@color/light_silver"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/loyalty_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 / 8"
            android:textColor="@color/light_silver"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Progress (Coffee Cups) -->
    <LinearLayout
        android:id="@+id/card_cup_list"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_rounded_white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Full Cups -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:src="@drawable/ic_coffee_full" />

        <!-- EmptyCups -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:src="@drawable/ic_coffee_empty" />
    </LinearLayout>

</LinearLayout>